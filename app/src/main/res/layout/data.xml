<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Steps Taken:"
        android:id="@+id/steps_label"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pace:"
        android:id="@+id/pace_label"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/steps_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Distance Walked:"
        android:id="@+id/distance_label"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/pace_label"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Calories Burned:"
        android:id="@+id/calories_label"
        android:layout_marginTop="117dp"
        android:layout_below="@+id/distance_label"
        android:layout_alignStart="@+id/distance_label" />
</RelativeLayout>